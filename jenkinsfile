pipeline {
    agent any

    environment {
        VIRTUAL_ENV = "${WORKSPACE}/venv"
        PATH = "${VIRTUAL_ENV}/bin:${env.PATH}"
        SONAR_TOKEN = credentials('SONAR_TOKEN')
        SONAR_HOST_URL = 'http://host.docker.internal:9000'
    }

    stages {
        stage('Build and Test inside Docker') {
            steps {
                sh """
                    docker run --rm -v $PWD:/workspace -w /workspace python:3.11 \
                    bash -c '
                        python -m venv venv &&
                        pip install --upgrade pip &&
                        pip install -r requirements.txt &&
                        pip install flake8 &&
                        flake8 . --count --select=E9,F63,F7,F82 --show-source --statistics &&
                        flake8 . --count --exit-zero --max-complexity=10 --max-line-length=127 --statistics &&
                        python manage.py test
                    '
                """
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('SonarQube') {
                    sh """
                        docker run --rm -v $PWD:/workspace -w /workspace sonarsource/sonar-scanner-cli \
                        sonar-scanner \
                        -Dsonar.projectKey=django_project \
                        -Dsonar.sources=. \
                        -Dsonar.host.url=$SONAR_HOST_URL \
                        -Dsonar.login=$SONAR_TOKEN
                    """
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
