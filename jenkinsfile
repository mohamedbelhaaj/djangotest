pipeline {
    agent any

    environment {
        VENV = "${WORKSPACE}/venv"
        SONAR_TOKEN = credentials('SONAR_TOKEN')
    }

    stages {

        stage('Checkout') {
            steps {
                git url: 'https://github.com/mohamedbelhaaj/djangotest.git', branch: 'main'
            }
        }

        stage('Setup Python') {
            steps {
                sh '''
                    python3 --version || { echo "Python3 not found"; exit 1; }
                '''
            }
        }

        stage('Create Virtualenv + Install Dependencies') {
            steps {
                sh '''
                    python3 -m venv $VENV
                    . $VENV/bin/activate
                    pip install --upgrade pip
                    pip install -r requirements.txt
                '''
            }
        }

        stage('Lint') {
            steps {
                sh '''
                    . $VENV/bin/activate
                    pip install flake8
                    flake8 . --count --exit-zero --max-complexity=10 --max-line-length=127 || true
                '''
            }
        }

        stage('Run Tests') {
            steps {
                sh '''
                    . $VENV/bin/activate
                    python manage.py test
                '''
            }
        }

        stage('SonarQube Analysis') {
            environment {
                SONAR_HOST_URL = 'http://sonarqube:9000'
            }
            steps {
                withSonarQubeEnv('SonarQube') {
                    sh '''
                        . $VENV/bin/activate
                        sonar-scanner \
                            -Dsonar.projectKey=django_project \
                            -Dsonar.sources=. \
                            -Dsonar.host.url=$SONAR_HOST_URL \
                            -Dsonar.login=$SONAR_TOKEN
                    '''
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}