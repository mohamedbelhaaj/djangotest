pipeline {
  agent {
    docker {
      image 'python:3.11'
      args '-u root:root'
    }
  }

  stages {
    stage('SCM') {
      steps {
        checkout scm
      }
    }

    stage('Install Dependencies') {
      steps {
        dir('backend') {
          sh 'pip install --upgrade pip'
          sh 'pip install -r requirements.txt'
        }
      }
    }

    stage('Run Tests + Coverage') {
      steps {
        dir('backend') {
          sh 'coverage run manage.py test'  // Correction: 'test' au lieu de 'teest'
          sh 'coverage xml'
          sh 'coverage report'
        }
      }
    }

    stage('SonarQube Analysis') {
      steps {
        dir('backend') {
          script {
            def scannerHome = tool 'SonarScanner'
            withSonarQubeEnv('SonarQube') {  // Ajoutez le nom de votre serveur SonarQube
              sh "${scannerHome}/bin/sonar-scanner"
            }
          }
        }
      }
    }
  }

  post {
    always {
      cleanWs()
    }
    success {
      echo 'Pipeline succeeded!'
    }
    failure {
      echo 'Pipeline failed!'
    }
  }
}