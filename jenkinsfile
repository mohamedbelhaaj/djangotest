pipeline {
    agent {
        docker {
            image 'python:3.11' // image officielle Python
        }
    }
    stages {
        stage('Checkout') {
            steps { git url: 'https://github.com/mohamedbelhaaj/djangotest.git', branch: 'main' }
        }
        stage('Setup Python') {
            steps {
                sh '''
                    python -m venv venv
                    pip install --upgrade pip
                    pip install -r requirements.txt
                '''
            }
        }
        stage('Run Tests') {
            steps { sh 'python manage.py test' }
        }
        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('SonarQube') {
                    sh '''
                        sonar-scanner \
                        -Dsonar.projectKey=django_project \
                        -Dsonar.sources=. \
                        -Dsonar.host.url=$SONAR_HOST_URL \
                        -Dsonar.login=$SONAR_TOKEN
                    '''
                }
            }
        }
    }
    post { always { cleanWs() } }
}
