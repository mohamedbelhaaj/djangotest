pipeline {
    agent any

    environment {
        VENV = "${WORKSPACE}/venv"
        SONAR_TOKEN = credentials('SONAR_TOKEN')
        SONAR_HOST_URL = 'http://host.docker.internal:9000'
    }

    stages {

        // --- CHECKOUT ---
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        // --- INSTALLATION DEPENDANCES ---
        stage('Create Virtualenv + Install Dependencies') {
            steps {
                sh '''
                    python3 -m venv $VENV
                    . $VENV/bin/activate
                    
                    pip install --upgrade pip
                    pip install -r requirements.txt
                    
                    echo "===== Virtualenv installé avec succès ====="
                '''
            }
        }

        // --- LINTING ---
        stage('Lint') {
            steps {
                sh '''
                    . $VENV/bin/activate
                    
                    pip install flake8
                    flake8 . \
                        --exclude=venv \
                        --count \
                        --exit-zero \
                        --max-complexity=10 \
                        --max-line-length=127 || true
                    
                    echo "===== Lint terminé ====="
                '''
            }
        }

        // --- TESTS DJANGO ---
        stage('Run Tests') {
            steps {
                sh '''
                    . $VENV/bin/activate
                    
                    echo "===== Lancement des tests ====="
                    python manage.py test --noinput
                '''
            }
        }

        // --- ANALYSE SONARQUBE ---
        stage('SonarQube Analysis') {
            steps {
                sh '''
                    echo "===== Vérification connexion SonarQube ====="
                    curl -s $SONAR_HOST_URL/api/system/status || echo "Impossible de contacter SonarQube"
                    
                    echo "===== Scan SonarQube ====="
                    . $VENV/bin/activate
                    sonar-scanner \
                        -Dsonar.projectKey=django_project \
                        -Dsonar.projectName=django_project \
                        -Dsonar.sources=. \
                        -Dsonar.python.version=3 \
                        -Dsonar.exclusions=venv/**,*.pyc,__pycache__/**,migrations/** \
                        -Dsonar.host.url=$SONAR_HOST_URL \
                        -Dsonar.token=$SONAR_TOKEN
                '''
            }
        }

        // --- QUALITY GATE ---
        stage('Quality Gate') {
            steps {
                timeout(time: 3, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }
    }

    // --- CLEAN FINAL ---
    post {
        always {
            cleanWs()
        }
    }
}
